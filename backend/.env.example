# ========================================
# TECHTYL - Konfiguration
# ========================================
# Bitte fülle die Felder mit deinen Daten aus!

# App-Einstellungen
APP_NAME=Techtyl
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ========================================
# DATENBANK - MySQL/MariaDB
# ========================================
# WICHTIG: Datenbank muss existieren!
# Erstelle sie mit: CREATE DATABASE techtyl;

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=techtyl
DB_USERNAME=root
DB_PASSWORD=dein_mysql_passwort_hier_eintragen

# ========================================
# REDIS - Caching & Sessions
# ========================================
# Optional - falls nicht installiert auf "file" ändern:
# CACHE_DRIVER=file
# SESSION_DRIVER=file

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# E-MAIL - Optional
# ========================================
# Für Entwicklung nicht benötigt

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@techtyl.io"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# AZURE OPENAI - KI-INTEGRATION
# ========================================
# ERFORDERLICH für AI-Features!
#
# Setup-Anleitung: Siehe AZURE_SETUP.md
#
# 1. Gehe zu: https://portal.azure.com/
# 2. Erstelle Azure OpenAI Resource
# 3. Kopiere API Key und Endpoint
# 4. Deploy ein Model (z.B. gpt-4o)
#
# Beispielwerte (NICHT verwenden, eigene eintragen!):

AZURE_OPENAI_API_KEY=dein-azure-api-key-hier
AZURE_OPENAI_ENDPOINT=https://dein-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ========================================
# TECHTYL - Panel-Einstellungen
# ========================================

# Dürfen sich Benutzer selbst registrieren?
TECHTYL_REGISTRATION_ENABLED=true

# E-Mail-Verifizierung erforderlich?
# (Für Entwicklung auf false setzen)
TECHTYL_EMAIL_VERIFICATION=false

# Wie viele Server darf ein neuer Benutzer erstellen?
TECHTYL_DEFAULT_SERVER_LIMIT=3

# AI-Features aktivieren? (true/false)
# Falls kein API Key: auf false setzen
TECHTYL_AI_ENABLED=true

# ========================================
# WICHTIGE HINWEISE
# ========================================
#
# 1. DB_PASSWORD muss gesetzt sein!
# 2. CLAUDE_API_KEY muss gesetzt sein (für AI)!
# 3. Nach Änderungen:
#    php artisan config:clear
#    php artisan cache:clear
#
# Hilfe: Siehe QUICKSTART.md
